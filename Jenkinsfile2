pipeline {
    agent any

    stages {
        stage('checkout git') {
            steps {
                checkout scm
            }
        }

        stage('testing with pytest') {
            agent {
                kubernetes {
                    yaml '''
                    apiVersion: v1
                    kind: Pod
                    spec:
                        serviceAccount: jenkins-sa
                        containers:
                          - name: pytest
                            image: omersal/testimage
                            tty: true
                            securityContext:
                                privileged: true
                    '''
                }
            }
            steps {
                container('pytest') {
                    script {
                        sh 'cd ./app && python -m pytest || [[ $? -eq 1 ]]'
                    }
                }
            }
        }

        // Build and push with build tag (replace with actual build commands)
        stage('Build and Push the image with tags') {
            agent {
                kubernetes {
                    yaml '''
                    apiVersion: v1
                    kind: Pod
                    spec:
                        serviceAccount: jenkins-sa
                        containers:
                          - name: maven
                            image: maven:alpine
                            command:
                            - cat
                            tty: true
                    '''
                }
            }
            environment {
                auth = 'dockerauth'
            }
            steps { 
                script {
                    docker.withRegistry('https://registry.example.com', 'dockerauth') {
                        def image = docker.build("omersal/rc-recommunity", "./app")
                        image.push("${env.BUILD_NUMBER - 11}")
                        image.push("latest")
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline POST:'
        }
        success {
            echo 'Pipeline SUCCESS!'
        }
        failure {
            echo 'Pipeline FAILED, check the logs for more information!'
        }
    }
}
